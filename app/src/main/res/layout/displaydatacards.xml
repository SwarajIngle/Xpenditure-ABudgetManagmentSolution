<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/DateDisplay"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:text="Date :"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_marginLeft="20dp"
             />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/expenseTitleDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expense Title Display"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/DateDisplay"
            />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/expenseAmountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expense Amount Display"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/DateDisplay"
            android:layout_below="@id/expenseTitleDisplay"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>